<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Soga" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Soga" parent="Base.Theme.Soga">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTextInputStyle">
        <item name="android:background">@drawable/textinput_background</item> <!-- Use a drawable for the button background -->
        <item name="android:paddingVertical">8dp</item> <!-- Padding -->
    </style>

    <style name="AppTextInputStyleEdittext">
        <item name="android:background">@null</item> <!-- Use a drawable for the button background -->
        <item name="android:layout_marginHorizontal">8dp</item> <!-- Padding -->
        <item name="android:ems">10</item> <!-- Padding -->
    </style>

</resources>